<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fdfbf2"
    tools:context=".fragments.deleteFragments.DeleteEntryFragment1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutAadhar"
        android:paddingHorizontal="30sp"
        android:paddingVertical="10sp"
        android:layout_marginVertical="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Aadhar Number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvAadharNo"
            />

        <LinearLayout
            android:id="@+id/linearLayoutAadharDigits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/etAadharDigit1"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit2"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit3"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit4"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />
            <EditText
                android:id="@+id/etAadharDigit5"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit6"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit7"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit8"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />
            <EditText
                android:id="@+id/etAadharDigit9"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit10"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit11"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit12"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutAadhar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Delete Entry"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        android:id="@+id/btnDelete"
        />

</androidx.constraintlayout.widget.ConstraintLayout>