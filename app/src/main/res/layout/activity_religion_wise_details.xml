<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.homeActivities.ReligionWiseDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#fdfbf2"
        android:id="@+id/card"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/igCensus"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Religion wise Details"
        android:textAlignment="center"
        android:scrollHorizontally="false"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="35dp"
        android:elevation="20sp"
        android:id="@+id/tvCensus"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:elevation="20sp"
        android:src="@drawable/religion"
        android:contentDescription="@string/conDesImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCensus"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:id="@+id/igCensus"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:scrollbars="horizontal|vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraintLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select state: "
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/constraintLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10sp"
                android:id="@+id/tvSelectState"
                />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/states_array"
                app:layout_constraintTop_toTopOf="@id/constraintLayout"
                app:layout_constraintStart_toEndOf="@id/tvSelectState"
                android:layout_margin="10sp"
                android:background="@drawable/rectangular_border"
                android:paddingVertical="5sp"
                android:paddingEnd="20sp"
                android:id="@+id/spinnerState"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drop_down"
                app:layout_constraintEnd_toEndOf="@+id/spinnerState"
                app:layout_constraintTop_toTopOf="@id/spinnerState"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerState"
                android:paddingStart="20sp"
                android:id="@+id/imageView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Population"
                app:layout_constraintTop_toBottomOf="@id/tvSelectState"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvPopulation"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="population in numbers"
                app:layout_constraintTop_toBottomOf="@id/tvSelectState"
                app:layout_constraintStart_toEndOf="@id/tvPopulation"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/population"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hindu"
                app:layout_constraintTop_toBottomOf="@id/tvPopulation"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvHindu"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="population in numbers"
                app:layout_constraintTop_toBottomOf="@id/tvPopulation"
                app:layout_constraintStart_toEndOf="@id/tvHindu"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationHindu"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sikh"
                app:layout_constraintTop_toBottomOf="@id/tvHindu"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvSikh"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="population in numbers"
                app:layout_constraintTop_toBottomOf="@id/tvHindu"
                app:layout_constraintStart_toEndOf="@id/tvSikh"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationSikh"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muslim"
                app:layout_constraintTop_toBottomOf="@id/tvSikh"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvMuslim"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="population in numbers"
                app:layout_constraintTop_toBottomOf="@id/tvSikh"
                app:layout_constraintStart_toEndOf="@id/tvMuslim"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationMuslim"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Christian"
                app:layout_constraintTop_toBottomOf="@id/tvMuslim"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvChristian"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="population in numbers"
                app:layout_constraintTop_toBottomOf="@id/tvMuslim"
                app:layout_constraintStart_toEndOf="@id/tvChristian"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationChristian"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jain"
                app:layout_constraintTop_toBottomOf="@id/tvChristian"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvJain"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="population in numbers"
                app:layout_constraintTop_toBottomOf="@id/tvChristian"
                app:layout_constraintStart_toEndOf="@id/tvJain"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationJain"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buddhist"
                app:layout_constraintTop_toBottomOf="@id/tvJain"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvBuddhist"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="population in numbers"
                app:layout_constraintTop_toBottomOf="@id/tvJain"
                app:layout_constraintStart_toEndOf="@id/tvBuddhist"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationBuddhist"
                />

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="300dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:id="@+id/pieChart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBuddhist"
                app:layout_constraintStart_toStartOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>