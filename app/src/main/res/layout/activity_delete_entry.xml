<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfbf2"
    tools:context=".activities.homeActivities.DeleteEntryActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#fdfbf2"
        android:id="@+id/card"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/igCensus"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Delete Entry"
        android:textAlignment="center"
        android:scrollHorizontally="false"
        android:fontFamily="@font/abril_fatface"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:elevation="20sp"
        android:id="@+id/tvCensus"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:elevation="20sp"
        android:src="@drawable/ic_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCensus"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:id="@+id/igCensus"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/deleteEntryFragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:navGraph="@navigation/nav_graph_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>