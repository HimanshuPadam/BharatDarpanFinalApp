<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.homeActivities.CasteWiseDetailsActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#fdfbf2"
        android:id="@+id/card"
        />

    <TextView
        android:id="@+id/tvCensus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="20sp"
        android:fontFamily="@font/abril_fatface"
        android:textSize="35dp"
        android:scrollHorizontally="false"
        android:text="Caste-wise Details"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/igCensus"
        app:layout_constraintTop_toTopOf="@id/card" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:elevation="20sp"
        android:src="@drawable/caste"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCensus"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:id="@+id/igCensus"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:scrollbars="horizontal|vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraintLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select state: "
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/constraintLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10sp"
                android:id="@+id/tvSelectState"
                />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/states_array"
                app:layout_constraintTop_toTopOf="@id/constraintLayout"
                app:layout_constraintStart_toEndOf="@id/tvSelectState"
                android:layout_margin="10sp"
                android:background="@drawable/rectangular_border"
                android:paddingVertical="5sp"
                android:paddingEnd="20sp"
                android:id="@+id/spinnerState"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drop_down"
                app:layout_constraintEnd_toEndOf="@+id/spinnerState"
                app:layout_constraintTop_toTopOf="@id/spinnerState"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerState"
                android:paddingStart="20sp"
                android:id="@+id/imageViewReligion"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Population"
                app:layout_constraintTop_toBottomOf="@id/tvSelectState"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvPopulation"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintTop_toBottomOf="@id/tvSelectState"
                app:layout_constraintStart_toEndOf="@id/tvPopulation"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/population"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                app:layout_constraintTop_toBottomOf="@id/tvPopulation"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvGeneral"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintTop_toBottomOf="@id/tvPopulation"
                app:layout_constraintStart_toEndOf="@id/tvGeneral"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationGeneral"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OBC"
                app:layout_constraintTop_toBottomOf="@id/tvGeneral"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvOBC"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintTop_toBottomOf="@id/tvGeneral"
                app:layout_constraintStart_toEndOf="@id/tvOBC"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationOBC"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BC"
                app:layout_constraintTop_toBottomOf="@id/tvOBC"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvBC"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintTop_toBottomOf="@id/tvOBC"
                app:layout_constraintStart_toEndOf="@id/tvBC"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationBC"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SC"
                app:layout_constraintTop_toBottomOf="@id/tvBC"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvSC"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintTop_toBottomOf="@id/tvBC"
                app:layout_constraintStart_toEndOf="@id/tvSC"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationSC"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ST"
                app:layout_constraintTop_toBottomOf="@id/tvSC"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/tvST"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintTop_toBottomOf="@id/tvSC"
                app:layout_constraintStart_toEndOf="@id/tvST"
                android:textSize="20sp"
                android:padding="10sp"
                android:id="@+id/populationST"
                />

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="300dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:id="@+id/pieChart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/populationST"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>