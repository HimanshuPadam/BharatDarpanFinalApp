<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.homeActivities.UpdateDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#fdfbf2"
        android:id="@+id/card"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/igCensus"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Update Details"
        android:textAlignment="center"
        android:scrollHorizontally="false"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:elevation="20sp"
        android:id="@+id/tvCensus"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:elevation="20sp"
        android:src="@drawable/update_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCensus"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:id="@+id/igCensus"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutAadhar"
        android:paddingHorizontal="30sp"
        android:paddingVertical="10sp"
        android:layout_marginVertical="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Aadhar Number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvAadharNo"
            />

        <LinearLayout
            android:id="@+id/linearLayoutAadharDigits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/etAadharDigit1"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit2"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit3"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit4"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />
            <EditText
                android:id="@+id/etAadharDigit5"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit6"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit7"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit8"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />
            <EditText
                android:id="@+id/etAadharDigit9"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit10"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit11"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etAadharDigit12"
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="1" />

        </LinearLayout>

    </LinearLayout>

<!--    <Button-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/linearLayoutAadhar"-->
<!--        android:textSize="20sp"-->
<!--        android:text="Fetch Details"-->
<!--        android:id="@+id/btnUpdate"-->
<!--        />-->

    <com.google.android.material.button.MaterialButton
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="FETCH DETAILS"
        app:cornerRadius="5sp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:backgroundTint="#3762CC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutAadhar"
        android:id="@+id/btnUpdate"
        />

</androidx.constraintlayout.widget.ConstraintLayout>